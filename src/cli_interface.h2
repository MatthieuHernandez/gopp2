#include "interface.h2"
#include "io.h2"

CliInterface: type = {
    this: Interface;

    public print:(override inout this, in message: std::string) = {
        std::cout << message << std::endl;
    }

    public printLater:(override inout this, in message: std::string) = {
        cli::setNextMessage(message);
    }

    public clear:(override inout this) = {
        cli::clearConsole();
    }

    public refreshGoban:(override inout this, in goban: Goban<9>) = {
        cli::printGoban<9>(goban);
    }

    public refreshGoban:(override inout this, in goban: Goban<19>) = {
        cli::printGoban<19>(goban);
    }

    public wait:(override inout this) = {
        cli::waitInput();
    }

    public waitForAMove:(override inout this, in c: Color) -> Move = {
        return cli::getInputMove<9>(c);
    }
}