#include "engine.h2"
#include "move.h2"
#include "io.h2"

Game : type = {
    play : () = {
        engine : Engine = ();
        do {
            printGoban(engine.goban_state);
            m: = getInputMove(engine.nextMovePlayer);
            clear();
            if engine.isValidMove(m) {
                engine.playMove(m);
                setNextMessage(colorName(m.color) + " played " + m.name + ".");
            }
            else {
                setNextMessage(colorName(m.color) + " cannot play " + m.name + ".");
            }

        } while !engine.isFinish();
}
}