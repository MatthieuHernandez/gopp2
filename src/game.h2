#include "engine.h2"
#include "move.h2"
#include "io.h2"

Game : type = {
    play : () = {
        engine : Engine = ();
        state: = engine.goban_state;
        current_player: = Color::Black;
        do {
            printGoban(state);
            m: = getInputMove(current_player);
            clear();
            engine.playMove(m);
            state = engine.goban_state;
            switchPlayer(current_player);
        } while !engine.isFinish();
}
}