#include "stone.h2"
#include "transformation.h2"

State: <T: type, Size: i8> type == std::array<std::array<T, Size>, Size>;

rotate90:<Size: i8>(inout state: State<Stone, Size>) = {
    maxIndex: i8 = Size - 1;
    oldState: State<Stone, Size> = state;
    (copy col: i8 = 0)
    while col < Size
    next col++
    {
        (copy row: i8 = 0)
        while row < Size
        next row++
        {
            state[col][maxIndex - row].color = oldState[row][col].color;
            state[col][maxIndex - row].estimation = oldState[row][col].estimation;
        }
    }
}

