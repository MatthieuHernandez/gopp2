

#include "move.h2"

nextMessage: std::string = 0;

setNextMessage:(message: std::string) = {
    nextMessage = message;
}

getNextMessage:() -> std::string = {
    m:= nextMessage;
    nextMessage = "";
    return m;
}

clear:(message: std::string = "") = { std::cout << "\x1B[2J\x1B[H" << message << std::endl; }

clearInput:() = {
    std::cin.clear();
    std::cin.ignore(INT_MAX, '\n');
}

printMenu:() =  {

    clear();
    std::cout << "**************************************************" << std::endl;
    std::cout << "*                   GOPP2 Menu                   *" << std::endl;
    std::cout << "**************************************************" << std::endl;
    std::cout << "* Please select one of the following:            *" << std::endl;
    std::cout << "*                                                *" << std::endl;
    std::cout << "*     1. Start a game                            *" << std::endl;
    std::cout << "*     2. Exit                                    *" << std::endl;
    std::cout << "**************************************************" << std::endl;
    std::cout << std::endl << getNextMessage() << std::endl;
}

getInputMenu:() -> i32 = {
    input: i32 = 0;
    std::cout << "> ";
    std::cin >> input;
    clearInput();
    return input;
}

getInputMove:(player: Color) -> Move = {
    input: std::string = 0;
    std::cout << "> ";
    std::cin >> input;
    clearInput();
    if(input == "pass") {
        setNextMessage("Player pass.");
        p: std::array<i8, 2> = (0, 0);
        m: Move = (player, p, true);
        return m;
    }
    input[0] = std::tolower(input[0]);
    if(input.ssize() < 2 || input.ssize() > 3 ||
       input[0] < 'a' || input[0] > 't' || input[0] == 'i' ||
       (input.ssize() == 2 && (input[1] < '1' || input[1] > '9')) ||
       (input.ssize() == 3 && (input[1] > '1' || input[2] < '0' || input[2] > '9'))) {
        std::cout << "\033[A\033[K\033[A\033[K" << "Invalid Move." << std::endl;
        return getInputMove(player);
    }
    col: i8 = 0;
    col = input[0] - 96;
    if col > 8 { // No I column
        col --;
    }
    row: i8 = 0;
    if input.ssize() == 2 {
        row = input[1] - 48;
    } else {
        row = ((input[1] - 48) * 10) + (input[2] - 48);
    }
  input[1];
    setNextMessage("Player play " + input + ".");
    p: std::array<i8, 2> = (row, col);
    m: Move = (player, p, false);
    return m;
}

// Make it a coroutine without row and col parameter
printIntersection:(row: i16, col: i16) = {
    if (row == 16 && (col == 4 || col == 10 || col == 16)) ||
       (row == 10 && (col == 4 || col == 10 || col == 16)) ||
       (row ==  4 && (col == 4 || col == 10 || col == 16)) {
        std::cout << "─●";
    } else {
        if row == 19 {
            if col == 1 {
                std::cout << " ┌";
            } 
            else if col == 19 {
                std::cout << "─┐";
            } else {
                std::cout << "─┬";
            }
        } else if row == 1 {
            if col == 1 {
                std::cout << " └";
            } else if col == 19 {
                std::cout << "─┘";
            } else {
                std::cout << "─┴";
            }
        } else {
            if col == 1 {
                std::cout << " ├";
            } else if col == 19 {
                std::cout << "─┤";
            } else {
                std::cout << "─┼";
            }
        }
    }
}

printGoban:(goban_state: std::array<i16, 361>) = {
    // First line
    std::cout << "     A B C D E F G H J K L M N O P Q R S T " << std::endl;
    row: i16 = 19;
    while row > 0
    next row--
    {
        if row < 10 {
            std::cout << "  " << row as std::string <<" ";
        } else {
             std::cout << " " << row as std::string <<" ";
        }
        col: i8 = 1;
        while col <= 19
        next col++
        {
            i: i16 = 0;
            i = (row-1) * 19 + col - 1;
            if goban_state[i] == 1 {
                std::cout << "⚫";
            } else if goban_state[i] == 2 {
                std::cout << "⚪";
            }
            else if goban_state[i] == 0 {
                printIntersection(row, col);
            }
        }
        std::cout << std::endl;
    }
    std::cout << std::endl << getNextMessage() << std::endl;
}


